{% extends "back-office.html.twig" %}
{% block body %}

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>articles</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="consulter-blog">blog</a></li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section dashboard">
            <div class="col-lg-6">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"></h5>

                        <!-- Table with stripped rows -->
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th scope="col">id</th>
                                <th scope="col">titre</th>
                                <th scope="col">text</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for c in commentaires %}
                                <tr>
                                    <td>{{ c.id }}</td>
                                    <td>{{ c.username }}</td>
                                    <td>{{ c.text }}</td>
                                    <td> <a href="{{ path('commentaire_deleteback',{'id':c.id}) }}">supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->

{% endblock %}
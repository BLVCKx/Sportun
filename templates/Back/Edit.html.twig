{% extends "back-office.html.twig" %}
{% block body %}

	<main id="main" class="main">

		<div class="pagepromotion">
			<h1>Evénnement</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="index.html">Home</a>
					</li>
					<li class="breadcrumb-item">Tables</li>
					<li class="breadcrumb-item active">Data</li>
				</ol>
			</nav>
		</div>
		<!-- End Page promotion -->
		<section class="section">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-body">
							<h5 class="card-promotion"></h5>


							{{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
							<h1>
								Modifier un événnement
							</h1>
							<div>
								{{ form_label(form.nom,"nomuser") }}
								<div class="col-sm-10">

									{{ form_widget(form.nom,{'attr': {'class': 'form-control'}}) }}

								</div>
								<div class="badge border-danger border-1 text-danger">
									{{ form_errors(form.nom) }}
								</div>
							</div>
							<div>
								{{ form_label(form.prenom,"prenomuser") }}
								<div class="col-sm-10">
									{{ form_widget(form.prenom,{'attr': {'class': 'form-control'}}) }}
									<div class="badge border-danger border-1 text-danger">
										{{ form_errors(form.prenom) }}
									</div>
								</div>
								<div>

									{{ form_label(form.adresse,"adresse") }}
									<div class="col-sm-10">
										{{ form_widget(form.adresse,{'attr': {'class': 'form-control'}}) }}
									</div>
									<div class="badge border-danger border-1 text-danger">
										{{ form_errors(form.adresse) }}
									</div>
								</div>
								<div>
									{{ form_label(form.telephone,"telephone") }}
									<div class="col-sm-10">
										{{ form_widget(form.telephone,{'attr': {'class': 'form-control'}}) }}
									</div>
									<div class="badge border-danger border-1 text-danger">
										{{ form_errors(form.telephone) }}
									</div>
								</div>
                                <div>
									{{ form_label(form.email,"email") }}
									<div class="col-sm-10">
										{{ form_widget(form.email,{'attr': {'class': 'form-control'}}) }}
									</div>
									<div class="badge border-danger border-1 text-danger">
										{{ form_errors(form.email) }}
									</div>
								</div>
								<div>
									{{ form_label(form.status,"status") }}
									<div class="col-sm-10">
										{{ form_widget(form.status,{'attr': {'class': 'form-control'}}) }}
									</div>
									<div class="badge border-danger border-1 text-danger">
										{{ form_errors(form.status) }}
									</div>
								</div>
								<div>
									{{ form_label(form.Role,"Role") }}
									<div class="col-sm-10">
										{{ form_widget(form.Role) }}
									</div>
									<div class="badge border-danger border-1 text-danger">
										{{ form_errors(form.Role) }}
									</div>
                                    <button type="submit">Modifier</button>
								</div{{form_end(form,{'render_rest':false})}}</div>
							</div>
						</div>
					</div>
				</section>
			</main>


		{% endblock %}

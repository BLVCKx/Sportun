<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUIcommande.FXMLcommandeController">
   <children>
      <VBox layoutX="34.0" layoutY="24.0" prefHeight="170.0" prefWidth="187.0" spacing="20.0">
         <children>
            <Label text="ID">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label layoutX="10.0" layoutY="10.0" text="Nom">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label layoutX="10.0" layoutY="10.0" text="Produit">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Label layoutX="10.0" layoutY="27.0" text="Total">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox layoutX="235.0" layoutY="24.0" prefHeight="170.0" prefWidth="208.0" spacing="20.0">
         <children>
            <TextField fx:id="txidCommande" editable="false" />
            <TextField fx:id="txnomCommande" layoutX="10.0" layoutY="10.0" />
            <TextField fx:id="txproduitCommande" editable="false" layoutX="10.0" layoutY="10.0" />
            <TextField fx:id="txtotalCommande" editable="false" layoutX="10.0" layoutY="35.0" />
         </children>
      </VBox>
      <TableView fx:id="tvCommande" layoutX="449.0" layoutY="24.0" onMouseClicked="#handleMouseAction">
        <columns>
          <TableColumn fx:id="colid" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="colnom" prefWidth="75.0" text="Nom" />
            <TableColumn fx:id="colproduit" prefWidth="75.0" text="Produit" />
            <TableColumn fx:id="coltotal" prefWidth="75.0" text="Total" />
        </columns>
      </TableView>
      <Button fx:id="btnAjouterCommande" layoutX="34.0" layoutY="246.0" mnemonicParsing="false" onAction="#addCommande" text="Ajouter" />
      <Button fx:id="btnModifierCommande" layoutX="107.0" layoutY="246.0" mnemonicParsing="false" onAction="#updateCommande" text="Modifier" />
      <Button fx:id="btnSupprimerCommande" layoutX="202.0" layoutY="246.0" mnemonicParsing="false" onAction="#deleteCommande" text="Supprimer" />
   </children>
</AnchorPane>
